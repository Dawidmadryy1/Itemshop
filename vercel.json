{
	"version": 2,
	"routes": [
    {
      "src": "/api/rcon",
      "dest": "/api/rcon.js"
    },
		{
      "src": "/api/voucher",
      "dest": "/api/voucher.js"
    },
		{
      "src": "/api/microsms_transfer",
      "dest": "/api/microsms_transfer.js"
    },
		{
      "src": "/api/microsms_transfer_gen",
      "dest": "/api/microsms_transfer_gen.js"
    },
		{
      "src": "/api/microsms_sms",
      "dest": "/api/microsms_sms.js"
    },
		{
      "src": "/api/lvlup",
      "dest": "/api/lvlup.js"
    },
		{
      "src": "/api/lvlup_gen",
      "dest": "/api/lvlup_gen.js"
    }
  ],
  "builds": [
		{
		 "src": "api/**/*.js",
		 "use": "@vercel/node"
	 	},
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
			"config": {
        "serverFiles": [
					"api/**"
				]
      }
    }
  ]
}

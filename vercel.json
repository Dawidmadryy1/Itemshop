{
	"version": 2,
	"routes": [
    {
      "src": "/api/lvlup",
      "dest": "/functions/api/lvlup.js"
    },
		{
      "src": "/api/voucher",
      "dest": "/functions/api/voucher.js"
    },
		{
      "src": "/api/microsms_transfer",
      "dest": "/functions/api/microsms_transfer.js"
    }
  ],
  "builds": [
		{
		 "src": "functions/api/**/*.js",
		 "use": "@vercel/node"
	 	},
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
			"config": {
        "serverFiles": [
					"functions/**",
					"misc/**"
				]
      }
    }
  ]
}
